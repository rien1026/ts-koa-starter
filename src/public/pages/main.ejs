<!DOCTYPE html>
<html class="no-js" lang="en">
	<%- include('../template/head')-%>
	<body>
		<!-- Left Panel -->
		<%- include('../template/sideNav')-%>
		<!-- Left Panel -->
		<!-- Right Panel -->
		<div id="right-panel" class="right-panel">			
			<div class="contents mt-5">
				<div class="col-lg-12" style="height: 120px;"></div>				
				<div class="col-lg-12 d-flex justify-content-center" style="height: 240px;">
					<div class="loader"></div>
				</div>				
				<div class="col-lg-12 d-flex justify-content-center" style="height: 240px;">
					<h2>이미지를 감지 중입니다.</h2>
				</div>				
				<div class="col-lg-6 mt-5">
					<div class="card">
						<div class="card-body">
							<div
								class="chartjs-size-monitor"
								style="
									position: absolute;
									left: 0px;
									top: 0px;
									right: 0px;
									bottom: 0px;
									overflow: hidden;
									pointer-events: none;
									visibility: hidden;
									z-index: -1;
								"
							>
								<div
									class="chartjs-size-monitor-expand"
									style="
										position: absolute;
										left: 0;
										top: 0;
										right: 0;
										bottom: 0;
										overflow: hidden;
										pointer-events: none;
										visibility: hidden;
										z-index: -1;
									"
								>
									<div style="position: absolute; width: 1000000px; height: 1000000px; left: 0; top: 0"></div>
								</div>
								<div
									class="chartjs-size-monitor-shrink"
									style="
										position: absolute;
										left: 0;
										top: 0;
										right: 0;
										bottom: 0;
										overflow: hidden;
										pointer-events: none;
										visibility: hidden;
										z-index: -1;
									"
								>
									<div style="position: absolute; width: 200%; height: 200%; left: 0; top: 0"></div>
								</div>
							</div>
							<h4 class="mb-3">Today</h4>
							<canvas
								id="today-chart"								
								class="chartjs-render-monitor"
								style="display: block; width: 612px; height: 306px"
							></canvas>
						</div>
					</div>
				</div>
				<div class="col-lg-6 mt-5">
					<div class="card">
						<div class="card-body">
							<div
								class="chartjs-size-monitor"
								style="
									position: absolute;
									left: 0px;
									top: 0px;
									right: 0px;
									bottom: 0px;
									overflow: hidden;
									pointer-events: none;
									visibility: hidden;
									z-index: -1;
								"
							>
								<div
									class="chartjs-size-monitor-expand"
									style="
										position: absolute;
										left: 0;
										top: 0;
										right: 0;
										bottom: 0;
										overflow: hidden;
										pointer-events: none;
										visibility: hidden;
										z-index: -1;
									"
								>
									<div style="position: absolute; width: 1000000px; height: 1000000px; left: 0; top: 0"></div>
								</div>
								<div
									class="chartjs-size-monitor-shrink"
									style="
										position: absolute;
										left: 0;
										top: 0;
										right: 0;
										bottom: 0;
										overflow: hidden;
										pointer-events: none;
										visibility: hidden;
										z-index: -1;
									"
								>
									<div style="position: absolute; width: 200%; height: 200%; left: 0; top: 0"></div>
								</div>
							</div>
							<h4 class="mb-3">Daily</h4>
							<canvas
								id="daily-chart"								
								class="chartjs-render-monitor"
								style="display: block; width: 612px; height: 306px"
							></canvas>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Right Panel -->
		<!--  Chart js -->
		<script src="vendors/chart.js/dist/Chart.bundle.min.js"></script>
		<script>			
			var chartDailyLabel = "<%= chartDailyLabel %>";
			var chartDailyDataList = "<%= chartDailyDataList %>";
			var chartTwoWeeksLabel = "<%= chartTwoWeeksLabel %>";
			var chartTwoWeeksDataList = "<%= chartTwoWeeksDataList %>";

			var todayChartBox = document.getElementById('today-chart');			
			var todayChart = new Chart(todayChartBox, {
				type: 'line',
				data: {
					labels: chartDailyLabel.split(','),
					type: 'line',
					defaultFontFamily: 'Montserrat',
					datasets: [
						{
							label: 'push',
							data: chartDailyDataList.split(','),
							backgroundColor: 'transparent',
							borderColor: 'rgba(220,53,69,0.75)',
							borderWidth: 1,
							pointStyle: 'circle',
							pointRadius: 5,
							pointBorderColor: 'transparent',
							pointBackgroundColor: 'rgba(220,53,69,0.75)',
						},						
					],
				},
				options: {
					responsive: true,

					tooltips: {
						mode: 'index',
						titleFontSize: 12,
						titleFontColor: '#000',
						bodyFontColor: '#000',
						backgroundColor: '#fff',
						titleFontFamily: 'Montserrat',
						bodyFontFamily: 'Montserrat',
						cornerRadius: 3,
						intersect: false,
					},
					legend: {
						display: false,
						labels: {
							usePointStyle: true,
							fontFamily: 'Montserrat',
						},
					},
					scales: {
						xAxes: [
							{
								display: true,
								gridLines: {
									display: false,
									drawBorder: false,
								},
								scaleLabel: {
									display: false,
									labelString: 'Month',
								},
							},
						],
						yAxes: [
							{
								display: true,
								gridLines: {
									display: false,
									drawBorder: false,
								},
								scaleLabel: {
									display: true,
									labelString: 'Value',
								},
							},
						],
					},
					title: {
						display: false,
						text: 'Normal Legend',
					},
				},
			});		

			var dailyChartBox = document.getElementById('daily-chart');			
			var dailyChart = new Chart(dailyChartBox, {
				type: 'line',
				data: {
					labels: chartTwoWeeksLabel.split(','),
					type: 'line',
					defaultFontFamily: 'Montserrat',
					datasets: [
						{
							label: 'push',
							data: chartTwoWeeksDataList.split(','),
							backgroundColor: 'transparent',
							borderColor: '#37cb34',
							borderWidth: 1,
							pointStyle: 'circle',
							pointRadius: 5,
							pointBorderColor: 'transparent',
							pointBackgroundColor: '#37cb34',
						},						
					],
				},
				options: {
					responsive: true,

					tooltips: {
						mode: 'index',
						titleFontSize: 12,
						titleFontColor: '#000',
						bodyFontColor: '#000',
						backgroundColor: '#fff',
						titleFontFamily: 'Montserrat',
						bodyFontFamily: 'Montserrat',
						cornerRadius: 3,
						intersect: false,
					},
					legend: {
						display: false,
						labels: {
							usePointStyle: true,
							fontFamily: 'Montserrat',
						},
					},
					scales: {
						xAxes: [
							{
								display: true,
								gridLines: {
									display: false,
									drawBorder: false,
								},
								scaleLabel: {
									display: false,
									labelString: 'Month',
								},
							},
						],
						yAxes: [
							{
								display: true,
								gridLines: {
									display: false,
									drawBorder: false,
								},
								scaleLabel: {
									display: true,
									labelString: 'Value',
								},
							},
						],
					},
					title: {
						display: false,
						text: 'Normal Legend',
					},
				},
			});		
	
		</script>
	</body>
</html>
